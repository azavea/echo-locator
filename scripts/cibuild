#!/bin/bash

set -e

if [[ -n "${ECHOLOCATOR_DEBUG}" ]]; then
    set -x
fi

function usage() {
    echo -n \
        "Usage: $(basename "$0")
Build application for staging or a release.
"
}

if [[ -n "${GIT_COMMIT}" ]]; then
    GIT_COMMIT="${GIT_COMMIT:0:7}"
else
    GIT_COMMIT="$(git rev-parse --short HEAD)"
fi

if [[ "${BASH_SOURCE[0]}" == "$0" ]]; then
    if [[ "${1:-}" == "--help" ]]; then
        usage
    else
        echo "Running update script"
        REACT_APP_GIT_COMMIT="${GIT_COMMIT}" \
            ./scripts/update

        echo "Running tests"
        # ./scripts/test

        # TODO: set env vars for frontend
        # https://github.com/azavea/echo-locator/issues/487
        
        echo "Building static bundle"
        docker-compose \
            -f docker-compose.yml \
            run --rm app \
            yarn run build

        echo "Building Django"
        # Build tagged container images
        GIT_COMMIT="${GIT_COMMIT}" docker-compose \
            -f docker-compose.yml \
            -f docker-compose.ci.yml \
            build django

        # Bring up PostgreSQL for Django tests
        docker-compose \
            -f docker-compose.yml \
            up -d database

        GIT_COMMIT="${GIT_COMMIT}" \
            ./scripts/test
    fi
fi
